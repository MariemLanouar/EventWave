@page "/organizer/all-speakers"
@using FrontEnd.DTOs
@using FrontEnd.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Organizer")]
@inject EventService EventService

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>All Speakers</h3>
        <a href="organizer/add-speaker" class="btn btn-primary">Add New Speaker</a>
    </div>

    @if (speakers == null)
    {
        <p>Loading...</p>
    }
    else if (!speakers.Any())
    {
        <p>No speakers found.</p>
    }
    else
    {
        <div class="row">
            @foreach (var sp in speakers)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 text-center">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(sp.ImageUrl))
                            {
                                <img src="@sp.ImageUrl" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;" alt="@sp.Name">
                            }
                            <h5 class="card-title">@sp.Name</h5>
                            <p class="card-text small text-muted">@sp.Expertise</p>
                             @if (sp.IsApproved)
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<SpeakerDTO>? speakers;

    protected override async Task OnInitializedAsync()
    {
        speakers = await EventService.GetAllSpeakersIncludingPendingAsync();
    }
}
