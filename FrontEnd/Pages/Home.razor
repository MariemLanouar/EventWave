@page "/"

<PageTitle>Home</PageTitle>

<div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Welcome to EventWave</h1>
        <p class="col-md-8 fs-4">Discover and join amazing events happening around you. Or create your own event and start selling tickets today.</p>
        <a href="events" class="btn btn-primary btn-lg" type="button">Browse Events</a>
    </div>
</div>

<div class="row align-items-md-stretch">
    <div class="col-md-6">
        <div class="h-100 p-5 text-white bg-dark rounded-3">
            <h2>For Organizers</h2>
            <p>Plan, publish, and manage your events with ease. Track sales, manage speakers, and more.</p>
            <button class="btn btn-outline-light" type="button">Create Event</button>
        </div>
    </div>
    <div class="col-md-6">
        <div class="h-100 p-5 bg-light border rounded-3">
            <h2>For Attendees</h2>
            <p>Find events that match your interests. Secure your spot with our easy booking system.</p>
            <a href="register" class="btn btn-outline-secondary" type="button">Sign Up</a>
        </div>
    </div>
</div>
