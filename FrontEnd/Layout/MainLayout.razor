@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EventWave - Plateforme d'Événements</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: calc(100vh - 56px);
            background: linear-gradient(180deg, #2c3e50 0%, #1a2530 100%);
        }

        .nav-link {
            color: #ecf0f1 !important;
            padding: 12px 20px;
            border-left: 4px solid transparent;
        }

        .nav-link:hover, .nav-link.active {
            background-color: rgba(255,255,255,0.1);
            border-left-color: #3498db;
        }

        .event-card {
            transition: transform 0.3s, box-shadow 0.3s;
            border: 1px solid #e9ecef;
        }

        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        .status-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.75rem;
        }
    </style>
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-calendar-event me-2"></i>
                    <strong>EventWave</strong>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("/") ? "active" : "")" href="/">
                                <i class="bi bi-house-door me-1"></i> Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsActive("/events") ? "active" : "")" href="/events">
                                <i class="bi bi-calendar4 me-1"></i> Événements
                            </a>
                        </li>

                        @if (IsAuthenticated)
                        {
                            @if (UserRole == "Client")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(IsActive("/my-bookings") ? "active" : "")" href="/my-bookings">
                                        <i class="bi bi-ticket-perforated me-1"></i> Mes Réservations
                                    </a>
                                </li>
                            }

                            @if (UserRole == "Organizer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(IsActive("/organizer/dashboard") ? "active" : "")" href="/organizer/dashboard">
                                        <i class="bi bi-speedometer2 me-1"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(IsActive("/organizer/events") ? "active" : "")" href="/organizer/events">
                                        <i class="bi bi-calendar-plus me-1"></i> Mes Événements
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(IsActive("/organizer/speakers") ? "active" : "")" href="/organizer/speakers">
                                        <i class="bi bi-person-badge me-1"></i> Conférenciers
                                    </a>
                                </li>
                            }

                            @if (UserRole == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(IsActive("/admin/dashboard") ? "active" : "")" href="/admin/dashboard">
                                        <i class="bi bi-speedometer2 me-1"></i> Admin Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(IsActive("/admin/users") ? "active" : "")" href="/admin/users">
                                        <i class="bi bi-people me-1"></i> Utilisateurs
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(IsActive("/admin/events") ? "active" : "")" href="/admin/events">
                                        <i class="bi bi-calendar-check me-1"></i> Tous Événements
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @UserName
                                    <span class="badge bg-light text-primary ms-2">@UserRole</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="/profile">
                                            <i class="bi bi-person me-2"></i> Mon Profil
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <button class="dropdown-item text-danger" @onclick="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i> Déconnexion
                                        </button>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Connexion
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/register">
                                    <i class="bi bi-person-plus me-1"></i> Inscription
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="container-fluid flex-grow-1">
            <div class="row">
                @if (IsAuthenticated && (UserRole == "Organizer" || UserRole == "Admin"))
                {
                    <div class="col-lg-2 sidebar d-none d-lg-block">
                        <div class="p-3">
                            <h5 class="text-white mb-4">Navigation</h5>
                            <ul class="nav flex-column">
                                @if (UserRole == "Organizer")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @(IsActive("/organizer/dashboard") ? "active" : "")" href="/organizer/dashboard">
                                            <i class="bi bi-speedometer2 me-2"></i> Dashboard
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(IsActive("/organizer/events") ? "active" : "")" href="/organizer/events">
                                            <i class="bi bi-calendar-plus me-2"></i> Événements
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(IsActive("/organizer/speakers") ? "active" : "")" href="/organizer/speakers">
                                            <i class="bi bi-person-badge me-2"></i> Conférenciers
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(IsActive("/organizer/analytics") ? "active" : "")" href="/organizer/analytics">
                                            <i class="bi bi-graph-up me-2"></i> Analytics
                                        </a>
                                    </li>
                                }
                                @if (UserRole == "Admin")
                                {
                                    <li class="nav-item">
                                        <a class="nav-link @(IsActive("/admin/dashboard") ? "active" : "")" href="/admin/dashboard">
                                            <i class="bi bi-speedometer2 me-2"></i> Dashboard
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(IsActive("/admin/users") ? "active" : "")" href="/admin/users">
                                            <i class="bi bi-people me-2"></i> Utilisateurs
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(IsActive("/admin/events") ? "active" : "")" href="/admin/events">
                                            <i class="bi bi-calendar-check me-2"></i> Événements
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link @(IsActive("/admin/settings") ? "active" : "")" href="/admin/settings">
                                            <i class="bi bi-gear me-2"></i> Configuration
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }

                <div class="@(IsAuthenticated && (UserRole == "Organizer" || UserRole == "Admin") ? "col-lg-10" : "col")">
                    <main class="p-4">
                        @Body
                    </main>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="bg-dark text-white py-4 mt-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <h5>EventWave</h5>
                        <p class="text-secondary">Plateforme de gestion d'événements pour tous vos besoins.</p>
                    </div>
                    <div class="col-md-4 mb-3">
                        <h5>Liens Rapides</h5>
                        <ul class="list-unstyled">
                            <li><a href="/events" class="text-secondary text-decoration-none">Événements</a></li>
                            <li><a href="/about" class="text-secondary text-decoration-none">À Propos</a></li>
                            <li><a href="/contact" class="text-secondary text-decoration-none">Contact</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4 mb-3">
                        <h5>Contact</h5>
                        <p class="text-secondary mb-1">contact@eventwave.com</p>
                        <p class="text-secondary">+33 1 23 45 67 89</p>
                    </div>
                </div>
                <hr class="bg-secondary">
                <div class="text-center text-secondary">
                    &copy; 2024 EventWave. Tous droits réservés.
                </div>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function checkAuth() {
            const token = localStorage.getItem('authToken');
            return token ? true : false;
        }

        function getUserRole() {
            return localStorage.getItem('userRole') || '';
        }

        function getUserName() {
            return localStorage.getItem('userName') || '';
        }

        function logout() {
            localStorage.removeItem('authToken');
            localStorage.removeItem('userRole');
            localStorage.removeItem('userName');
            window.location.href = '/login';
        }
    </script>
</body>
</html>

@code {
    private bool IsAuthenticated { get; set; }
    private string UserRole { get; set; } = "";
    private string UserName { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadUserData();
    }

    private async Task LoadUserData()
    {
        try
        {
            // En Blazor WebAssembly, on peut utiliser IJSRuntime pour accéder au localStorage
            UserRole = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "userRole") ?? "";
            UserName = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "userName") ?? "";
            var token = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "authToken") ?? "";
            IsAuthenticated = !string.IsNullOrEmpty(token);
        }
        catch
        {
            IsAuthenticated = false;
        }
    }

    private bool IsActive(string path)
    {
        var currentPath = Navigation.Uri.Replace(Navigation.BaseUri, "").Split('?')[0];
        return currentPath == path.TrimStart('/') ||
               (path == "/" && string.IsNullOrEmpty(currentPath));
    }

    private async Task Logout()
    {
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "authToken");
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "userRole");
        await JSRuntime.InvokeVoidAsync("localStorage.removeItem", "userName");
        Navigation.NavigateTo("/login", true);
    }
}
